{
    "name": "Better Chrome",
    "description": "Personalize chrome controls",
    "version": "1.0",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "exclude_matches": []
        }
    ],
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/d16.png",
            "128": "/images/d128.png"
        }
    },
    "icons": {
        "16": "/images/d16.png",
        "128": "/images/d128.png"
    }
}